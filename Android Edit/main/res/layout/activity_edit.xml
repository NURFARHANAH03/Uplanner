<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Edit">

    <TextView
            android:text="Edit Task"
            android:layout_width="86dp"
            android:layout_height="53dp" android:id="@+id/textView"
            android:textSize="40sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.057"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="79dp"
            android:inputType="textPersonName"
            android:text="Task"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.086" app:layout_constraintVertical_bias="0.193"/>
    <EditText
            android:layout_width="229dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text="Location"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.087" app:layout_constraintVertical_bias="0.344"/>
    <Button
            android:text="Start"
            android:onClick="popTimePicker"
            android:layout_width="108dp"
            android:layout_height="69dp" android:id="@+id/timeStart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.237" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.515"/>
    <Button
            android:text="End"
            android:onClick="popTimePicker2"
            android:layout_width="97dp"
            android:layout_height="62dp" android:id="@+id/timeEnd"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.815" app:layout_constraintVertical_bias="0.509"/>
</androidx.constraintlayout.widget.ConstraintLayout>