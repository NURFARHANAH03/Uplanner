<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Schedule"
            android:onClick="timetable"
            android:layout_width="270dp"
            android:layout_height="92dp" android:id="@+id/schedule"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintVertical_bias="0.331" android:backgroundTint="#0C30F6" android:textSize="20sp"/>
    <Button
            android:text="Location"
            android:onClick="location"
            android:layout_width="274dp"
            android:layout_height="88dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.555"
            app:layout_constraintHorizontal_bias="0.518" android:backgroundTint="#0C30F6" android:textSize="20sp"
            android:fontFamily="sans-serif-medium"/>


</androidx.constraintlayout.widget.ConstraintLayout>