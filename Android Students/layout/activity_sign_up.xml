<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".SignUpActivity"
              android:padding="16dp">


    <TextView
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Create UPlanner Account"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" android:minHeight="48dp"/>

    <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UTP Email" android:minHeight="48dp"/>


    <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create Password"
            android:inputType="textPassword" android:minHeight="48dp"/>

    <EditText
            android:id="@+id/editTextMatricID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matric ID" android:minHeight="48dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program:"
            android:textSize="16sp"/>

    <Spinner
            android:id="@+id/spinnerProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/utpProgram" android:minHeight="48dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year of Study:"
            android:textSize="16sp"/>

    <Spinner
            android:id="@+id/spinnerYearStudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/yearStudy" android:minHeight="48dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level of Study:"
            android:textSize="16sp"/>

    <RadioGroup
            android:id="@+id/radioGroupLevelStudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/radioButtonFSem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Semester"/>

        <RadioButton
                android:id="@+id/radioButtonSSem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Semester"/>

        <RadioButton
                android:id="@+id/radioButtonTSem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third Semester"/>
    </RadioGroup>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"/>
    <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"/>

    <TextView
            android:text="Already Have UPlanner Account? Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/go_to_logIn"/>

</LinearLayout>
