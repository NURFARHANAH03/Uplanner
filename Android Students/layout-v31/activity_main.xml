<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity"  android:id="@+id/uplanner">
    <ImageView
            android:layout_width="67dp"
            android:layout_height="92dp" android:id="@+id/UTPlogo"
            app:srcCompat="@drawable/utplogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/frontImage" app:layout_constraintEnd_toStartOf="@+id/U"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:text="U"
            android:layout_width="35dp"
            android:layout_height="95dp" android:id="@+id/U"
            android:textSize="60sp" android:textColor="#C39F35"
            app:layout_constraintBottom_toTopOf="@+id/frontImage" android:layout_marginBottom="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/Planner"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/UTPlogo" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Planner"
            android:layout_width="208dp"
            android:layout_height="90dp" android:id="@+id/Planner"
            android:textColor="#24348A" android:textSize="60sp"
            android:background="#00FFFFFF" android:elegantTextHeight="false" android:filterTouchesWhenObscured="false"
            android:forceHasOverlappingRendering="false"
            app:layout_constraintStart_toEndOf="@+id/U" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="421dp"
            android:layout_height="376dp"
            android:id="@+id/frontImage"
            app:srcCompat="@drawable/studentsociety" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/Planner"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="386dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="Universiti Teknologi PETRONAS Online Planner"
            android:ems="10"
            android:id="@+id/descApps"
            app:layout_constraintTop_toBottomOf="@+id/frontImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:rotation="0" android:textSize="16sp"
            android:textColor="#0C0C0C" android:textAlignment="center"/>
    <Button
            android:text="Sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SignUp"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/design_default_color_primary_variant"
            android:textColorHint="@color/black" android:onClick="signUp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/descApps" android:layout_marginEnd="75dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/LogIn"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/design_default_color_primary_variant"
            android:textColorHint="@color/black" android:onClick="logIn"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/descApps"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp" app:layout_constraintEnd_toStartOf="@+id/SignUp"
            android:layout_marginEnd="79dp" app:icon="@android:color/system_accent1_700"/>
    <ImageView
            android:layout_width="480dp"
            android:layout_height="110dp" tools:srcCompat="@drawable/ss"
            android:id="@+id/bottomImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/><![CDATA[
    / >
]]>
</androidx.constraintlayout.widget.ConstraintLayout>